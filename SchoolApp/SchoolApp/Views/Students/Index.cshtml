@using SchoolApp.BLL.ModelViews
@model IEnumerable<StudentDto>
@{
    ViewData["Title"] = "Index";
}
<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand float-end" href="#">قائمة الطلاب</a>
    </div>
</nav>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة طالب جديد</a>
</p>

---

@* Section for displaying messages (success or error) from TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

---

@* Search Form: This allows users to filter the list of students by name *@
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchinput" class="form-control" placeholder="البحث بالاسم..." value="@ViewBag.CurrentSearchInput" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary">بحث</button>
            <a asp-action="Index" class="btn btn-outline-secondary">مسح البحث</a> @* Button to clear search and show all *@
        </div>
    </div>
</form>

---

@* Table to display student data *@
<table class="table table-striped table-hover">
    @* Added table-hover for better UX *@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradesId)
            </th>
            <th>
                الصورة
            </th>
            <th></th> @* For action links (Edit, Details, Delete) *@
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.IdNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.SchoolId)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.GradesId)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImgName))
                        {
                            <img src="@item.StudentImage" alt="صورة الطالب" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                        }
                        else
                        {
                            <span class="text-muted">لا توجد صورة</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">تفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">لا توجد بيانات لعرضها.</td> @* Message when no students are found *@
            </tr>
        }
    </tbody>
</table>
